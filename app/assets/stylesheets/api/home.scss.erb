#home-page {

    > #home-image {
        height: 580px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        animation: switchImg infinite 60s ease-in-out;

        @keyframes switchImg {
            0% { background-image: url("<%= image_url("/home_images/p1.jpg") %>") }
            10% { background-image: url("<%= image_url("/home_images/p1.jpg") %>") }
            15% { background-image: url("<%= image_url("/home_images/s1.jpg") %>") }
            25% { background-image: url("<%= image_url("/home_images/s1.jpg") %>") }
            30% { background-image: url("<%= image_url("/home_images/p2.jpg") %>") }
            40% { background-image: url("<%= image_url("/home_images/p2.jpg") %>") }
            45% { background-image: url("<%= image_url("/home_images/s2.jpg") %>") }
            55% { background-image: url("<%= image_url("/home_images/s2.jpg") %>") }
            60% { background-image: url("<%= image_url("/home_images/p3.jpg") %>") }
            70% { background-image: url("<%= image_url("/home_images/p3.jpg") %>") }
            75% { background-image: url("<%= image_url("/home_images/s3.jpg") %>") }
            85% { background-image: url("<%= image_url("/home_images/s3.jpg") %>") }
            90% { background-image: url("<%= image_url("/home_images/p1.jpg") %>") }
            100% { background-image: url("<%= image_url("/home_images/p1.jpg") %>") }
        }

        > div {
            color: white;
            font-size: 60px;
            font-weight: bold;
        }

        #search-container {
            position: relative;
            z-index: 0;

            #search-bar {
                position: relative;
                z-index: 2;
                background-color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-top: 24px;
                height: 72px;
                width: 644px;
                border-radius: 40px;
                box-shadow: 0px 10px 20px 0px rgba(120, 120, 120, 0.3);

                > img:first-child {
                    height: 22px;
                    filter: opacity(0.5) drop-shadow(0 0 0 rgb(219, 219, 219));
                }

                > input {
                    font-size: 18px;
                    font-weight: 400;
                    color: #737373;
                    border: none;
                    width: 520px;
                    margin: 0px 15px;
                }

                > input:focus {
                    outline: none;
                }

                > button {
                    border: none;
                    background-image: url("/home_images/arrow.png");
                    background-position: center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    height: 40px;
                    width: 40px;
                }

                > button:hover {
                    opacity: 0.75;
                    cursor: pointer;
                }

            }

            > #search-modal {
                position: absolute;
                z-index: 1;
                top: 60px;
                max-height: 350px;
                width: 644px;
                background: white;
                overflow-y: scroll;
                padding-top: 37px;
                border-radius: 0px 0px 0px 40px;

                > a {
                    display: flex;
                    align-items: center;
                    text-decoration: none;
                    height: 60px;
                    border-bottom: 0.25px solid rgba(190, 190, 190, 0.25);
                    color: rgb(70, 70, 70);

                    > img {
                        height: 30px;
                        margin-left: 15px;
                        filter: hue-rotate(70deg);
                    }

                    > article {
                        margin-left: 15px;

                        > div:first-child {
                            font-size: 18px;
                        }

                        > div:last-child {
                            font-size: 12px;
                            margin-top: 8px;
                        }

                    }

                }

                > a:hover {
                    background-color: rgb(232, 232, 232);
                    color: #428a13;
                    cursor: pointer;
                }

            }

        }

    }

    > #trail-cards-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: rgb(240, 240, 240);

        > #trail-cards {
            max-width: 1280px;
            width: 95vw;
            color: rgb(75, 75, 75);
            padding: 55px 0px;

            > h3 {
                font-size: 22px;
                font-weight: bold;
                padding-bottom: 30px;

                > span {
                    text-decoration: underline;
                }

            }

            > .cards {
                display: flex;
                justify-content: space-around;
                height: 350px;

                > a {
                    height: 300px;
                    width: 300px;
                    padding: 8px;
                    border-radius: 15px;
                    transition:
                        background-color 0.1s ease-in-out,
                        box-shadow 0.1s ease-in-out;

                    > img {
                        width: 100%;
                        height: 200px;
                        border-radius: 25px;
                        object-fit: cover;
                    }

                    > div:nth-child(2) {
                        margin-top: 4px;
                        color: rgb(75, 75, 75);
                        font-size: 12px;
                        display: flex;
                        align-items: center;

                        > span {
                            border-radius: 6px;
                            padding: 4px 8px 4px 8px;
                            color: white;
                            margin-right: 2px;
                        }

                        > .easy {
                            background-color: #428a13;
                        }

                        > .moderate {
                            background-color: rgb(0, 180, 255);
                        }

                        > .hard {
                            background-color: rgb(80, 80, 80);
                        }

                        > img {
                            height: 14px;
                            width: 14px;
                            margin-left: 2px;
                        }

                    }

                    > div:nth-child(3) {
                        margin-top: 6px;
                        color: rgb(75, 75, 75);
                        font-weight: bold;
                        font-size: 15px;
                    }

                    > div:nth-child(4) {
                        margin-top: 4px;
                        color: rgb(120, 120, 120);
                        font-size: 12px;
                    }

                    > div:nth-child(5) {
                        margin-top: 4px;
                        color: rgb(120, 120, 120);
                        font-size: 12px;
                    }

                }

                > a:hover {
                    background: white;
                    box-shadow: 0px 0px 15px 10px rgb(200, 200, 200);
                }

            }

        }

    }


}
